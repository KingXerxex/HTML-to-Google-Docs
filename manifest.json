{
  "manifest_version": 3,
  "name": "Save Page to Google Docs",
  "version": "1.4",
  "description": "Adds a button to save an intranet page as a Google Doc.",
  "permissions": [
    "scripting" 
  ],
  "host_permissions": [
    "https://www.serebii.net/*",
    "https://serebii.net/*",
    "https://script.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Save to Google Docs"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.serebii.net/*",
        "https://serebii.net/*"
      ],
      "js": ["content.js"]
    }
  ]
}